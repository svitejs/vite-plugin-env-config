{
  "name": "vite-plugin-env-config-monorepo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --dir packages/vite-plugin-env-config dev",
    "build": "pnpm -r build",
    "test": "pnpm -r --workspace-concurrency=1 test",
    "lint": "eslint --ignore-path .gitignore '**/*.{js,ts,md}'",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --ignore-path .gitignore '**/*.{js,ts,md}' --check",
    "format:fix": "pnpm run format --write",
    "fixup": "run-s lint:fix format:fix",
    "release": "pnpm run build && pnpm changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@types/node": "^18.16.5",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "tsm": "^2.3.0",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{,js,ts,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "pnpm": "^7.5.0",
    "yarn": "forbidden, use pnpm",
    "npm": "forbidden, use pnpm",
    "node": "^14.13.1 || ^16.0.0 || >=18"
  },
  "pnpm": {
    "overrides": {
      "@svitejs/vite-plugin-env-config": "workspace:*"
    }
  }
}
